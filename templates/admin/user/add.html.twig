{% extends 'admin/base.html.twig' %}
{% block left_sidebar %}
    {% include 'admin/common/left-sidebar.twig' with { active: 'users' } %}
{% endblock %}

{% block main %}
    <h3 class="page-title text-info">
        <span class="fa fa-user-plus"></span>
        Ajouter un membre
    </h3>
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Remplissez le formulaire</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                        <div class="container-fluid">
                            <div class="input-group my-3">
                                <span class="input-group-addon"><i class="lnr lnr-user fa-lg"></i></span>
                                {{ form_widget(form.username, {'attr': {'placeholder': 'Nom et prénom', 'class': 'form-control input-lg'}}) }}
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-addon"><i class="lnr lnr-smartphone fa-lg"></i></span>
                                {{ form_widget(form.phone, {'attr': {'placeholder': 'Numéro de téléphone', 'class': 'form-control input-lg'}}) }}
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-addon"><i class="lnr lnr-map-marker fa-lg"></i></span>
                                {{ form_widget(form.address, {'attr': {'class': 'form-control input-lg'}}) }}
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-addon"><i class="lnr lnr-home fa-lg"></i></span>
                                {{ form_widget(form.room, {'attr': {'placeholder': 'Numéro de chambre', 'class': 'form-control input-lg'}}) }}
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-addon"><i class="lnr lnr-apartment fa-lg"></i></span>
                                {{ form_widget(form.ufr, {'attr': {'class': 'form-control input-lg'}}) }}
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-addon"><i class="lnr lnr-graduation-hat fa-lg"></i></span>
                                {{ form_widget(form.level, {'attr': {'class': 'form-control input-lg'}}) }}
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-addon"><i class="lnr lnr-briefcase fa-lg"></i></span>
                                {{ form_widget(form.post, {'attr': {'class': 'form-control input-lg'}}) }}
                            </div>
                            
                            <hr>
                            <button type="submit" class="btn btn-success btn-lg"><i class="fa fa-lg fa-check-circle"></i> Valider</button>
                            
                            {{ form_widget(form.saveAndCreateNew, {'attr': {'class': 'btn btn-info btn-lg float-right'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}