{% trans_default_domain 'FOSUserBundle' %}
<!-- WRAPPER -->
<div id="wrapper">
    <div class="vertical-align-wrap">
        <div class="vertical-align-middle">
            <div class="auth-box lockscreen clearfix">
                <div class="content">
                    <h1 class="sr-only">{{ website.name }}</h1>
                    <div class="user text-center">
                        <img src="{{ asset('images/acems.jpg') }}" class="img-circle" width="400" alt="ACEMS Logo">
                    </div>
                    <form action="{{ path("fos_user_security_check") }}" method="POST">
                        {% if error %}
                            <p class="text-danger">Mot de passe invalide.</p>
                        {% endif %}

                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <input type="hidden" id="username" name="_username" value="{{ website.email }}" required="required"/>
                        <div class="input-group">
                            <input class="form-control" name="_password" placeholder="Entrez le mot de passe ..." type="password">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-arrow-right"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END WRAPPER -->